<!DOCTYPE html>
<html>
  <head>
    <title><%= @page_title %></title>
    <%= csrf_meta_tags %>

    <meta name="keywords" content="<%= @seo_keyword %>" />

    <%= stylesheet_link_tag    'portfolios', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <div>
      <div><%= link_to "Home",    root_path %></div>
      <div><%= link_to "About",   about_me_path %></div>
      <div><%= link_to "Blogs",   blogs_path %></div>
      <div><%= link_to "Portfolio", portfolios_path %></div>
      <div><%= link_to "Contact", contact_path %></div>


    </div>
    <% if current_user.is_a?(User) %>
      <%= link_to "Logout", destroy_user_session_path, method: :delete %>
    <% else %>
      <%= link_to "Register", new_user_registration_path %>
      <%= link_to "Login", new_user_session_path %>
    <% end %>

  <body>
    <%= yield %>

    <% if session[:source] %>
    <p>Thanks for visitng me from <%= session[:source] %></p>
    <% end %>
  </body>
</html>
