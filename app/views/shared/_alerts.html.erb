<% if flash[:alert] %>
  <%= js add_gritter(flash[:alert], title: "Yohanan Assefa's Portfolio",
       sticky: false) %>
<% elsif flash[:error] %>
  <%= js add_gritter(flash[:error], title: "Yohanan Assefa's Portfolio",
       sticky: false) %>
  <% else %>
  <%= js add_gritter(flash[:notice], title: "Yohanan Assefa's Portfolio",
       sticky: false) %>

<% end %>
